cursor-click = pointer
cursor-scroll = ns-resize

tray-position = right
tray-maxsize = 10
tray-offset-y = 0
tray-padding = 2
tray-margin = 2
tray-background = ${colors.color8}

[module/stat_net]
type = custom/script
exec = ~/.config/MySetting/stat_network.sh
tail = true
interval = 300.0
format = <label>
label = " %output% "
label-background = ${colors.color5}
label-foreground = ${colors.foreground}

[module/xwindow]
type = internal/xwindow
format-prefix = ""
label = " %title:0:120:...% "
label-background = ${colors.color10}
label-foreground = ${colors.foreground}    

[module/i3]
type = internal/i3
format = "<label-mode> <label-state>"
format-background = ${colors.color10}
format-foreground = ${colors.foreground}
index-sort = true
wrapping-scroll = false

ws-icon-0 = "1;#"
