[colors]
background = #212121
;background = #992f343f
background-alt = #393e46
foreground = #eeeeee
foreground-alt = #60555555
alert = #4ecca3
transparent = #00000000

[bar/topbar]
width = 100%
height = 24
radius = 0
fixed-center = false
;monitor = ${env:MONITOR:HDMI-1}
;offset-x = 1%
;offset-y = 1%

background = ${colors.transparent}
foreground = ${colors.foreground}

line-size = 0
line-color = #055e68

;border-size = 3
border-top-size = 5
border-right-size = 5
