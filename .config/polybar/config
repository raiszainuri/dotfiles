foreground-alt = #555555

alert = #046C77
transparent = #00000000

[bar/topbar]
width = 100%
height = 20
radius = 0
fixed-center = true
override-redirect = false

;monitor = ${env:MONITOR:HDMI-1}
;offset-x = 1%
;offset-y = 1%

background = ${colors.transparent}
foreground = ${colors.foreground}

line-size = 0
line-color = ${colors.foreground}

;border-size = 4
border-top-size = 0
border-right-size = 0
border-left-size = 0
border-bottom-size = 0

border-color = 

padding-left = 0
padding-right = 0

module-margin-left = 0
module-margin-right = 0

font-0 = consolas:pixelsize=9;2
font-1 = consolas:pixelsize=9;2
font-2 = FontAwesome:pixelsize=10;2

modules-left = i3 xwindow 
modules-center =
modules-right = pulseaudio cpu memory battery get_temp stat_net date powermenu

cursor-click = pointer
cursor-scroll = ns-resize

tray-position = right
tray-maxsize = 10
tray-offset-y = 0
tray-padding = 2
tray-margin = 2
#tray-background = ${colors.background}


# LEFT ====================================================================

[module/i3w]
type = custom/script
exec = ~/.config/MySetting/current_workspace2.sh
tail = true
interval = 0
format = <label>
label = "%output%"
label-background = ${colors2.background}
label-foreground = ${colors2.foreground}

#---------------------------------------------------------------------------

[module/i3]
type = internal/i3
format = "<label-mode> <label-state>"
format-background = ${colors.color10}
format-foreground = ${colors.foreground}
format-prefix = " "
index-sort = true
wrapping-scroll = false

ws-icon-0 = "1;#"
ws-icon-1 = "2;#"
ws-icon-2 = "3;#"
ws-icon-3 = "4;#"
ws-icon-4 = "5;#"
ws-icon-5 = "6;#"
ws-icon-6 = "7;#"
ws-icon-7 = "8;#"
ws-icon-8 = "9;#"
ws-icon-9 = "10;#"

; Only show workspaces on the same output as the bar
; pin-workspaces = true

;label-mode = [%mode%]
label-mode = " RESIZE "
label-mode-padding = 0
label-mode-background = ${colors.background}
label-mode-foreground = ${colors.foreground}

; focused = Active workspace on focused monitor
label-focused = "%icon%"
label-focused-background= ${colors.color0}
label-focused-foreground= ${colors.white}
label-focused-underline= ${colors.foreground}
label-focused-padding = 0
label-focused-margin = 0

; unfocused = Inactive workspace on any monitor
label-unfocused = "%icon%"
label-unfocused-padding = 0
label-unfocused-background= ${colors.color0}
label-unfocused-foreground= ${colors.foreground-tr}

; visible = Active workspace on unfocused monitor
;label-visible = %name%
;label-visible-background = ${self.label-focused-background}
;label-visible-padding = ${self.label-focused-padding}

; urgent = Workspace with urgency hint set
label-urgent = "%name%"
label-urgent-background = ${colors.alert}
label-urgent-foreground = ${colors.white}
label-urgent-padding = 1
label-urgent-margin-left = 1
label-urgent-margin-right = 0

; Separator in between workspaces
 label-separator = ""

#---------------------------------------------------------------------------

[module/xwindow]
type = internal/xwindow
format-prefix = " "
label = " %title:0:120:...% "
label-background = #80FFFFFF
label-foreground = #80000000


# RIGHT ====================================================================

[module/pulseaudio]
