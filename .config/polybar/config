label-open-foreground = ${colors.foreground}
label-open-background = ${colors.color9}
label-close = "  BATAL  "
label-close-foreground = ${colors.foreground}
label-close-background = ${colors.color9}
label-separator = "|"
label-separator-foreground = ${colors.foreground}

menu-0-0 = " RESTART "
menu-0-0-foreground = ${colors.foreground}
menu-0-0-background = ${colors.color9}
menu-0-0-exec = menu-open-1
menu-0-0-margin-left = 2
menu-0-1 = " MATIKAN "
menu-0-1-foreground = ${colors.foreground}
menu-0-1-background = ${colors.color9}
menu-0-1-exec = menu-open-2

menu-1-0 = "  BATAL  "
menu-1-0-foreground = ${colors.foreground}
menu-1-0-background = ${colors.color9}
menu-1-0-exec = menu-open-0
menu-1-0-margin-left = 2
menu-1-1 = " RESTART "
menu-1-1-foreground = ${colors.foreground}
menu-1-1-background = ${colors.color9}
menu-1-1-exec = reboot

menu-2-0 = " MATIKAN "
menu-2-0-exec = shutdown now
menu-2-0-foreground = ${colors.foreground}
menu-2-0-background = ${colors.color9}
menu-2-0-margin-left = 2
menu-2-1 = "  BATAL  "
menu-2-1-foreground = ${colors.foreground}
menu-2-1-background = ${colors.color9}
menu-2-1-exec = menu-open-0

