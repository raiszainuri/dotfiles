module-margin-right = 0

font-0 = iosevka:pixelsize=9;3
font-1 = iosevka:fontformat=truetype:size=9:antialias=false;0
font-2 = iosevka:pixelsize=9;1

modules-left = i3 xwindow
modules-right = pulseaudio cpu memory battery date powermenu

