[bar/topbar]
width = 100%
height = 20
radius = 0
fixed-center = true

override-redirect = false
;monitor = ${env:MONITOR:HDMI-1}
;offset-x = 1%
;offset-y = 1%

background = ${colors.background}
;background = ${colors.transparent}
foreground = ${colors.foreground}

line-size = 0
line-color = ${colors.foreground}

;border-size = 4
border-top-size = 0
border-right-size = 0
